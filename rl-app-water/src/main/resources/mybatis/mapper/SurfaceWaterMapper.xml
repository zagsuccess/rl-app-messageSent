<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.uhope.template.mapper.SurfaceWaterMapper">
    <resultMap id="BaseResultMap" type="com.uhope.template.domain.SurfaceWater">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="issue" jdbcType="VARCHAR" property="issue"/>
        <result column="createTime" jdbcType="TIMESTAMP" property="createtime"/>
        <result column="createUser" jdbcType="VARCHAR" property="createuser"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
    </resultMap>
    <select id="selectList" resultType="com.uhope.template.domain.SurfaceWater">
        select * from surface_water
        <where>
            <if test="issue1 != null and issue2 != null">
                and issue BETWEEN #{issue1} and #{issue2}
            </if>
            <if test="status != null">
                AND status=#{status}
            </if>
            <if test="createUser != null">
                AND createUser like CONCAT('%',#{createUser},'%')
            </if>
        </where>
    </select>
</mapper>