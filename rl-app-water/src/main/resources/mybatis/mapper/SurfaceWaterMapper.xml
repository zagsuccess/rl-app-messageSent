<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.uhope.water.mapper.SurfaceWaterMapper">
    <resultMap id="BaseResultMap" type="com.uhope.water.domain.SurfaceWater">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="issue" jdbcType="VARCHAR" property="issue"/>
        <result column="createTime" jdbcType="TIMESTAMP" property="createtime"/>
        <result column="createUser" jdbcType="VARCHAR" property="createuser"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
    </resultMap>

    <select id="selectList" resultType="com.uhope.water.domain.SurfaceWater">
        select * from surface_water
        <where>
            <if test="issue != null ">
                and issue = #{issue}
            </if>
            <if test="status != null">
                AND status=#{status}
            </if>
            <if test="createUser != null">
                AND createUser like CONCAT('%',#{createUser},'%')
            </if>
            <if test="num !=null">
                and status !=#{num}
            </if>
        </where>
    </select>

    <!-- 查询市河长办的账号-->
    <select id="selectSHZB" resultType="java.lang.String">
        select sm_user.ID from sm_user INNER JOIN
        (select sur.USER_ID from sm_role sr INNER JOIN sm_user_role sur on sr.id=sur.ROLE_ID where sr.name='市河长办'
        )s on sm_user.id =s.USER_ID
    </select>

    <!--查询环保局的账号-->
    <select id="selectSHBJ" resultType="java.lang.String">
        select sm_user.ID from sm_user INNER JOIN
        (select sur.USER_ID from sm_role sr INNER JOIN sm_user_role sur on sr.id=sur.ROLE_ID where sr.name='环保局'
        )s on sm_user.id =s.USER_ID
    </select>
</mapper>